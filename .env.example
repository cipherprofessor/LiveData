# Tej India - Environment Configuration
# Copy this file to .env and update with your values

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DATABASE_URL="postgresql://tej_user:tej_password_123@localhost:5432/tej_india?schema=public"

# ==============================================
# SERVER
# ==============================================
NODE_ENV=development
PORT=4000
API_VERSION=v1

# ==============================================
# JWT Authentication
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ==============================================
# REDIS (Caching & Queue)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# EMAIL (SendGrid / NodeMailer)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email sender details
EMAIL_FROM=noreply@tejindia.com
EMAIL_FROM_NAME=Tej India

# ==============================================
# AWS S3 (File Uploads)
# ==============================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=tej-india-uploads

# ==============================================
# GOOGLE MAPS API (Location Matching)
# ==============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# RAZORPAY (Payment Gateway)
# ==============================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ==============================================
# SOCKET.IO (Real-time Chat)
# ==============================================
SOCKET_PORT=4001
SOCKET_CORS_ORIGIN=http://localhost:5173

# ==============================================
# FRONTEND URL
# ==============================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000

# ==============================================
# SENTRY (Error Tracking) - Optional
# ==============================================
SENTRY_DSN=

# ==============================================
# CLOUDINARY (Image Upload Alternative)
# ==============================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==============================================
# BULL QUEUE (Background Jobs)
# ==============================================
BULL_REDIS_URL=redis://localhost:6379

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# CORS
# ==============================================
CORS_ORIGIN=http://localhost:5173

# ==============================================
# SESSION
# ==============================================
SESSION_SECRET=your-session-secret-key-change-this

# ==============================================
# ENCRYPTION
# ==============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ==============================================
# TWILIO (SMS/Phone Verification) - Optional
# ==============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==============================================
# FIREBASE (Push Notifications) - Optional
# ==============================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

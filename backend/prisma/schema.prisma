enum ConversationType {
  DIRECT
  GROUP
  SUPPORT
}

// Conversation Model for Chat
model Conversation {
  conversationId      String            @id @default(uuid()) @map("id")
  conversationType    ConversationType  @default(DIRECT)
  participantIds      String[]          // Array of userIds
  lastMessageId       String?
  lastMessageAt       DateTime?
  isArchived          Boolean           @default(false)
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  messages            ConversationMessage[]

  @@index([participantIds])
  @@index([lastMessageAt])
  @@map("conversations")
}

// Enhanced Message Model for Real-Time Chat
model ConversationMessage {
  messageId           String            @id @default(uuid()) @map("id")
  conversationId      String
  senderId            String
  content             String
  messageType         MessageType       @default(TEXT)
  fileUrl             String?
  fileName            String?
  fileSize            Int?
  thumbnailUrl        String?
  deliveredAt         DateTime?
  readAt              DateTime?
  replyToMessageId    String?
  reactions           Json?             // { "‚ù§Ô∏è": ["userId1", "userId2"], "üëç": ["userId3"] }
  isEdited            Boolean           @default(false)
  editedAt            DateTime?
  isDeleted           Boolean           @default(false)
  deletedAt           DateTime?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  conversation        Conversation      @relation(fields: [conversationId], references: [conversationId], onDelete: Cascade)


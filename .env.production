# ============================================
# LiveData Production Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password-in-production
POSTGRES_DB=live_data
POSTGRES_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=change-this-redis-password-in-production
REDIS_PORT=6379

# ==========================================
# Backend Configuration
# ==========================================
BACKEND_PORT=4000

# Security Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-base64-64
SIGNING_SECRET=your-hmac-signing-secret-change-this-in-production-use-openssl-rand-base64-64

# Storage Configuration
STORAGE_PROVIDER=local
# If using S3, uncomment and configure:
# STORAGE_PROVIDER=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_FORCE_PATH_STYLE=false

# CORS Configuration
CORS_ORIGIN=http://localhost,https://yourdomain.com

# File Conversion (Optional)
CONVERSION_PROVIDER=noop
# CLOUDCONVERT_API_KEY=your-cloudconvert-api-key
# CLOUDCONVERT_WEBHOOK_URL=https://yourdomain.com/api/v1/conversions/webhook/cloudconvert
# CLOUDCONVERT_WEBHOOK_TOKEN=your-webhook-token

# ==========================================
# Frontend Configuration
# ==========================================
FRONTEND_PORT=80
VITE_API_URL=http://localhost:4000/api/v1

# ==========================================
# Data Storage Path
# ==========================================
# Local path where Docker volumes will store data
DATA_PATH=./data

# ==========================================
# Optional: Email Configuration
# ==========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@livedata.io

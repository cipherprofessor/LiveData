// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  ADMIN
  MODERATOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  BANNED
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum SwapStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
  CANCELLED
}

enum NotificationType {
  SWAP_REQUEST
  SWAP_ACCEPTED
  SWAP_REJECTED
  SWAP_COMPLETED
  MESSAGE
  BADGE_EARNED
  EVENT_REMINDER
  SYSTEM
}

enum ReportType {
  USER
  REVIEW
  MESSAGE
  EVENT
  PROFILE_CONTENT
  SPAM
  HARASSMENT
  INAPPROPRIATE_CONTENT
  OTHER
}

enum ReportStatus {
  PENDING
  UNDER_REVIEW
  RESOLVED
  DISMISSED
}

enum ModeratorActionType {
  BAN_USER
  SUSPEND_USER
  WARN_USER
  DELETE_CONTENT
  DISMISS_REPORT
  VERIFY_USER
  REMOVE_SUBSCRIPTION
}

// Models
model User {
  userId            String        @id @default(uuid()) @map("id")
  email             String        @unique
  password          String
  name              String
  phone             String?       @unique
  avatar            String?
  bio               String?
  dateOfBirth       DateTime?
  gender            String?
  city              String?
  state             String?
  pincode           String?
  latitude          Float?
  longitude         Float?
  role              UserRole      @default(USER)
  status            UserStatus    @default(ACTIVE)
  coins             Int           @default(100)
  level             Int           @default(1)
  experiencePoints  Int           @default(0)
  rating            Float         @default(0)
  completedSwaps    Int           @default(0)
  totalHoursTaught  Float         @default(0)
  totalHoursLearned Float         @default(0)
  emailVerified     Boolean       @default(false)
  phoneVerified     Boolean       @default(false)
  lastActive        DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  skills                 UserSkill[]
  swapsInitiated         Swap[]                  @relation("SwapInitiator")
  swapsReceived          Swap[]                  @relation("SwapReceiver")
  reviews                Review[]                @relation("ReviewAuthor")
  reviewsReceived        Review[]                @relation("ReviewReceiver")
  badges                 UserBadge[]
  connections            Connection[]            @relation("UserConnections")
  connectedBy            Connection[]            @relation("ConnectedUsers")
  messages               Message[]               @relation("MessageSender")
  notifications          Notification[]
  notificationPreferences NotificationPreferences?
  eventsOrganized        Event[]                 @relation("EventOrganizer")
  eventsAttending        EventAttendance[]
  subscription           UserSubscription?
  payments               Payment[]
  invoices               Invoice[]
  auditLogs              AuditLog[]
  reportsCreated         Report[]                @relation("ReportCreator")
  reportsReceived        Report[]                @relation("ReportedUser")
  moderatorActions       ModeratorAction[]

  @@index([email])
  @@index([city, state])
  @@index([latitude, longitude])
  @@index([rating])
  @@map("users")
}

model SkillCategory {
  categoryId  String   @id @default(uuid()) @map("id")
  name        String   @unique
  description String?
  icon        String?
  color       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  skills      Skill[]

  @@map("skill_categories")
}

model Skill {
  skillId     String        @id @default(uuid()) @map("id")
  name        String
  description String?
  categoryId  String
  icon        String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  category    SkillCategory @relation(fields: [categoryId], references: [categoryId], onDelete: Cascade)
  userSkills  UserSkill[]
  events      Event[]

  @@index([categoryId])
  @@index([name])
  @@map("skills")
}

enum SkillType {
  TEACH
  LEARN
}

model UserSkill {
  userSkillId       String     @id @default(uuid()) @map("id")
  userId            String
  skillId           String
  skillType         SkillType
  proficiencyLevel  SkillLevel @default(BEGINNER)
  yearsOfExperience Int        @default(0)
  description       String?
  isVerified        Boolean    @default(false)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  user  User  @relation(fields: [userId], references: [userId], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [skillId], onDelete: Cascade)

  @@unique([userId, skillId, skillType])
  @@index([userId])
  @@index([skillId])
  @@index([skillType])
  @@index([proficiencyLevel])
  @@map("user_skills")
}

model Swap {
  swapId            String      @id @default(uuid()) @map("id")
  initiatorId       String
  receiverId        String
  initiatorSkillId  String
  receiverSkillId   String
  status            SwapStatus  @default(PENDING)
  message           String?
  duration          Int?        // in minutes
  scheduledAt       DateTime?
  completedAt       DateTime?
  cancelledAt       DateTime?
  cancellationReason String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  initiator         User        @relation("SwapInitiator", fields: [initiatorId], references: [userId], onDelete: Cascade)
  receiver          User        @relation("SwapReceiver", fields: [receiverId], references: [userId], onDelete: Cascade)
  sessions          SwapSession[]
  reviews           Review[]

  @@index([initiatorId])
  @@index([receiverId])
  @@index([status])
  @@index([scheduledAt])
  @@map("swaps")
}

model SwapSession {
  sessionId   String    @id @default(uuid()) @map("id")
  swapId      String
  startTime   DateTime
  endTime     DateTime?
  duration    Int?      // in minutes
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  swap        Swap      @relation(fields: [swapId], references: [swapId], onDelete: Cascade)

  @@index([swapId])
  @@map("swap_sessions")
}

model Review {
  reviewId          String       @id @default(uuid()) @map("id")
  swapId            String
  studentId         String       @map("authorId")
  teacherId         String       @map("receiverId")
  rating            Int          // 1-5 stars
  comment           String?
  teachingQuality   Int?         // 1-5 stars (optional detailed rating)
  communication     Int?         // 1-5 stars (optional detailed rating)
  punctuality       Int?         // 1-5 stars (optional detailed rating)
  tags              String[]     @default([]) // e.g., ["patient", "knowledgeable", "helpful"]
  isPublic          Boolean      @default(true)
  helpfulCount      Int          @default(0)
  isEdited          Boolean      @default(false)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  swap              Swap         @relation(fields: [swapId], references: [swapId], onDelete: Cascade)
  student           User         @relation("ReviewAuthor", fields: [studentId], references: [userId], onDelete: Cascade)
  teacher           User         @relation("ReviewReceiver", fields: [teacherId], references: [userId], onDelete: Cascade)
  votes             ReviewVote[]

  @@unique([swapId, studentId]) // One review per student per swap
  @@index([swapId])
  @@index([studentId])
  @@index([teacherId])
  @@index([rating])
  @@map("reviews")
}

model ReviewVote {
  voteId      String   @id @default(uuid()) @map("id")
  reviewId    String
  userId      String
  isHelpful   Boolean  // true for helpful, false for not helpful
  createdAt   DateTime @default(now())

  review      Review   @relation(fields: [reviewId], references: [reviewId], onDelete: Cascade)

  @@unique([reviewId, userId]) // One vote per user per review
  @@index([reviewId])
  @@index([userId])
  @@map("review_votes")
}

model Badge {
  badgeId     String      @id @default(uuid()) @map("id")
  name        String      @unique
  description String
  icon        String
  criteria    String      // e.g., "SWAP_COUNT", "RATING", "REGISTRATION_DATE"
  threshold   Int         // e.g., 1, 5, 10, 50, 100
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userBadges  UserBadge[]

  @@map("badges")
}

model UserBadge {
  userBadgeId String   @id @default(uuid()) @map("id")
  userId      String
  badgeId     String
  earnedAt    DateTime @default(now())

  user        User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  badge       Badge    @relation(fields: [badgeId], references: [badgeId], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@map("user_badges")
}

model Connection {
  connectionId    String   @id @default(uuid()) @map("id")
  userId          String
  connectedUserId String
  createdAt       DateTime @default(now())

  user          User     @relation("UserConnections", fields: [userId], references: [userId], onDelete: Cascade)
  connectedUser User     @relation("ConnectedUsers", fields: [connectedUserId], references: [userId], onDelete: Cascade)

  @@unique([userId, connectedUserId])
  @@index([userId])
  @@index([connectedUserId])
  @@map("connections")
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM
}

enum EventType {
  WORKSHOP
  MEETUP
  WEBINAR
  SKILL_EXCHANGE
  STUDY_GROUP
  NETWORKING
  SEMINAR
  OTHER
}

enum EventStatus {
  DRAFT
  PUBLISHED
  ONGOING
  COMPLETED
  CANCELLED
}

model Message {
  messageId       String      @id @default(uuid()) @map("id")
  conversationId  String      // For grouping messages between two users
  senderId        String
  receiverId      String
  content         String
  messageType     MessageType @default(TEXT)
  imageUrl        String?     // For image messages
  fileUrl         String?     // For file attachments
  fileName        String?     // Original file name
  fileSize        Int?        // File size in bytes
  isDelivered     Boolean     @default(false)
  deliveredAt     DateTime?
  isRead          Boolean     @default(false)
  readAt          DateTime?
  replyToId       String?     // For replying to specific messages
  isDeleted       Boolean     @default(false)
  deletedAt       DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  sender          User        @relation("MessageSender", fields: [senderId], references: [userId], onDelete: Cascade)
  replyTo         Message?    @relation("MessageReplies", fields: [replyToId], references: [messageId], onDelete: SetNull)
  replies         Message[]   @relation("MessageReplies")

  @@index([conversationId])
  @@index([senderId])
  @@index([receiverId])
  @@index([isRead])
  @@index([createdAt])
  @@map("messages")
}

model Event {
  eventId       String      @id @default(uuid()) @map("id")
  organizerId   String
  title         String
  description   String
  imageUrl      String?
  eventType     EventType   @default(OTHER)
  status        EventStatus @default(DRAFT)
  startTime     DateTime
  endTime       DateTime
  location      String?     // General location
  venue         String?     // Detailed venue info
  city          String?
  state         String?
  isOnline      Boolean     @default(false)
  meetingLink   String?     // For online events (Zoom, Google Meet, etc.)
  skillId       String?     // Related skill (optional)
  maxAttendees  Int?
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  organizer     User            @relation("EventOrganizer", fields: [organizerId], references: [userId], onDelete: Cascade)
  skill         Skill?          @relation(fields: [skillId], references: [skillId], onDelete: SetNull)
  attendees     EventAttendance[]

  @@index([organizerId])
  @@index([startTime])
  @@index([status])
  @@index([eventType])
  @@index([isActive])
  @@index([city, state])
  @@map("events")
}

model EventAttendance {
  attendanceId String   @id @default(uuid()) @map("id")
  eventId      String
  userId       String
  registeredAt DateTime @default(now())

  event        Event    @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("event_attendance")
}

model Notification {
  notificationId String           @id @default(uuid()) @map("id")
  userId         String
  type           NotificationType
  title          String
  message        String
  data           Json?
  isRead         Boolean          @default(false)
  readAt         DateTime?
  createdAt      DateTime         @default(now())

  user           User             @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

model NotificationPreferences {
  preferenceId           String   @id @default(uuid()) @map("id")
  userId                 String   @unique

  // Email Notifications
  emailEnabled           Boolean  @default(true)
  emailSwapRequest       Boolean  @default(true)
  emailSwapAccepted      Boolean  @default(true)
  emailSwapRejected      Boolean  @default(false)
  emailSwapCompleted     Boolean  @default(true)
  emailMessage           Boolean  @default(true)
  emailBadgeEarned       Boolean  @default(true)
  emailEventReminder     Boolean  @default(true)
  emailSystem            Boolean  @default(true)

  // In-App Notifications
  inAppEnabled           Boolean  @default(true)
  inAppSwapRequest       Boolean  @default(true)
  inAppSwapAccepted      Boolean  @default(true)
  inAppSwapRejected      Boolean  @default(true)
  inAppSwapCompleted     Boolean  @default(true)
  inAppMessage           Boolean  @default(true)
  inAppBadgeEarned       Boolean  @default(true)
  inAppEventReminder     Boolean  @default(true)
  inAppSystem            Boolean  @default(true)

  // Email Digest
  digestEnabled          Boolean  @default(false)
  digestFrequency        DigestFrequency @default(WEEKLY)
  digestDay              Int?     // Day of week for weekly (0=Sunday, 6=Saturday)
  digestHour             Int      @default(9) // Hour of day (0-23)
  lastDigestSent         DateTime?

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user                   User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@map("notification_preferences")
}

enum DigestFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

model AuditLog {
  logId       String   @id @default(uuid()) @map("id")
  userId      String?
  action      String
  entity      String
  entityId    String?
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  user        User?    @relation(fields: [userId], references: [userId], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
  @@map("audit_logs")
}

// Subscription & Payment Models

enum SubscriptionTier {
  FREE
  BASIC
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAYMENT_FAILED
  TRIAL
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum PaymentMethod {
  RAZORPAY
  CARD
  UPI
  NET_BANKING
  WALLET
}

model UserSubscription {
  subscriptionId       String             @id @default(uuid()) @map("id")
  userId               String             @unique
  tier                 SubscriptionTier   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)

  // Billing
  amount               Float              @default(0)
  currency             String             @default("INR")
  billingCycle         String             @default("MONTHLY") // MONTHLY, YEARLY

  // Dates
  startDate            DateTime           @default(now())
  currentPeriodStart   DateTime           @default(now())
  currentPeriodEnd     DateTime?
  trialEnd             DateTime?
  cancelAt             DateTime?
  cancelledAt          DateTime?

  // Auto-renewal
  autoRenew            Boolean            @default(true)

  // Razorpay
  razorpaySubscriptionId String?          @unique
  razorpayCustomerId     String?

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user                 User               @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([tier])
  @@index([status])
  @@index([currentPeriodEnd])
  @@map("user_subscriptions")
}

model Payment {
  paymentId              String        @id @default(uuid()) @map("id")
  userId                 String

  // Payment details
  amount                 Float
  currency               String        @default("INR")
  status                 PaymentStatus @default(PENDING)
  paymentMethod          PaymentMethod @default(RAZORPAY)

  // Razorpay
  razorpayPaymentId      String?       @unique
  razorpayOrderId        String?
  razorpaySignature      String?

  // Description
  description            String?
  subscriptionTier       SubscriptionTier?

  // Metadata
  metadata               Json?
  failureReason          String?

  // Dates
  paidAt                 DateTime?
  refundedAt             DateTime?
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  user                   User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  invoice                Invoice?

  @@index([userId])
  @@index([status])
  @@index([razorpayPaymentId])
  @@index([createdAt])
  @@map("payments")
}

model Invoice {
  invoiceId              String             @id @default(uuid()) @map("id")
  userId                 String
  paymentId              String             @unique

  // Invoice details
  invoiceNumber          String             @unique
  amount                 Float
  tax                    Float              @default(0)
  discount               Float              @default(0)
  total                  Float
  currency               String             @default("INR")

  // Period
  periodStart            DateTime
  periodEnd              DateTime

  // Subscription
  subscriptionTier       SubscriptionTier

  // Status
  isPaid                 Boolean            @default(false)
  paidAt                 DateTime?

  // PDF
  pdfUrl                 String?

  // Dates
  dueDate                DateTime
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  user                   User               @relation(fields: [userId], references: [userId], onDelete: Cascade)
  payment                Payment            @relation(fields: [paymentId], references: [paymentId], onDelete: Cascade)

  @@index([userId])
  @@index([invoiceNumber])
  @@index([isPaid])
  @@index([createdAt])
  @@map("invoices")
}

// Content Moderation & Admin Models

model Report {
  reportId           String        @id @default(uuid()) @map("id")
  reporterId         String
  reportedUserId     String?

  // Report details
  type               ReportType
  status             ReportStatus  @default(PENDING)
  reason             String
  description        String?
  evidence           String?       // JSON array of URLs/screenshots

  // Content references
  reviewId           String?
  messageId          String?
  eventId            String?

  // Resolution
  resolvedBy         String?
  resolvedAt         DateTime?
  resolution         String?       // Moderator notes

  // Timestamps
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Relations
  reporter           User          @relation("ReportCreator", fields: [reporterId], references: [userId], onDelete: Cascade)
  reportedUser       User?         @relation("ReportedUser", fields: [reportedUserId], references: [userId], onDelete: SetNull)
  moderatorActions   ModeratorAction[]

  @@index([reporterId])
  @@index([reportedUserId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
  @@map("reports")
}

model ModeratorAction {
  actionId           String                @id @default(uuid()) @map("id")
  moderatorId        String
  reportId           String?

  // Action details
  actionType         ModeratorActionType
  targetUserId       String?
  targetContentId    String?               // reviewId, messageId, eventId, etc.
  targetContentType  String?               // 'review', 'message', 'event', etc.

  // Details
  reason             String
  notes              String?
  duration           Int?                  // For suspensions (in days)

  // Timestamps
  createdAt          DateTime              @default(now())

  // Relations
  moderator          User                  @relation(fields: [moderatorId], references: [userId], onDelete: Cascade)
  report             Report?               @relation(fields: [reportId], references: [reportId], onDelete: SetNull)

  @@index([moderatorId])
  @@index([reportId])
  @@index([actionType])
  @@index([targetUserId])
  @@index([createdAt])
  @@map("moderator_actions")
}

model AdminSettings {
  settingId          String        @id @default(uuid()) @map("id")
  key                String        @unique
  value              String        // JSON stringified value
  category           String        // 'general', 'moderation', 'payments', 'features', etc.
  description        String?
  updatedBy          String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  @@index([category])
  @@index([key])
  @@map("admin_settings")
}

// ============================================================================
// TRUST & SAFETY MODELS (SkillSwap Enhancement Roadmap)
// ============================================================================

enum VerificationStatus {
  PENDING
  VERIFIED
  FAILED
  EXPIRED
  REJECTED
}

enum VerificationType {
  AADHAAR
  VIDEO_SELFIE
  SKILL_TEST
  PORTFOLIO
  PEER_ENDORSEMENT
  BACKGROUND_CHECK
}

// Aadhaar Verification for Government ID Verification
model AadhaarVerification {
  verificationId     String             @id @default(uuid()) @map("id")
  userId             String             @unique
  aadhaarLastFour    String             // Store only last 4 digits for security
  requestId          String             // Third-party API request ID
  status             VerificationStatus
  name               String?
  address            Json?              // Encrypted address data
  verifiedAt         DateTime?
  expiresAt          DateTime?
  failureReason      String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@index([userId])
  @@index([status])
  @@map("aadhaar_verifications")
}

// Video Selfie Verification for Face Matching
model VideoSelfieVerification {
  verificationId     String             @id @default(uuid()) @map("id")
  userId             String
  videoUrl           String             // S3 URL to encrypted video
  thumbnailUrl       String?
  faceMatchScore     Float?             // 0-100 confidence score
  status             VerificationStatus
  verifiedAt         DateTime?
  failureReason      String?
  moderatorId        String?            // For manual review
  moderatorNotes     String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@index([userId])
  @@index([status])
  @@map("video_selfie_verifications")
}

// Enhanced Skill Verification System
model SkillVerification {
  verificationId      String             @id @default(uuid()) @map("id")
  userSkillId         String
  verificationType    VerificationType
  verificationStatus  VerificationStatus
  verificationScore   Int?               // 0-100
  verifiedBy          String?            // UserID or 'SYSTEM' or 'AI'
  verificationDate    DateTime?
  verificationProof   Json?              // Certificates, test results, portfolio links
  expiryDate          DateTime?
  notes               String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([userSkillId])
  @@index([verificationType])
  @@index([verificationStatus])
  @@map("skill_verifications")
}

enum RelationType {
  COLLEAGUE
  MENTOR
  STUDENT
  PEER
  CLIENT
  OTHER
}

// Peer Endorsement Network for Skills
model SkillEndorsement {
  endorsementId       String       @id @default(uuid()) @map("id")
  endorserId          String       // User giving endorsement
  userSkillId         String       // Skill being endorsed
  endorsementStrength Int          // 1-5 scale
  relationship        RelationType
  endorsementText     String?
  isVerified          Boolean      @default(false) // Prevents fake endorsement rings
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@unique([endorserId, userSkillId]) // One endorsement per endorser per skill
  @@index([userSkillId])
  @@index([endorserId])
  @@map("skill_endorsements")
}

enum SkillTestDifficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

// AI-Generated Skill Tests
model SkillTest {
  testId              String               @id @default(uuid()) @map("id")
  skillId             String
  title               String
  description         String?
  difficulty          SkillTestDifficulty
  questions           Json                 // Array of MCQ + practical tasks
  passingScore        Int                  @default(70)
  timeLimit           Int                  @default(30) // minutes
  isActive            Boolean              @default(true)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  attempts            SkillTestAttempt[]

  @@index([skillId])
  @@index([difficulty])
  @@map("skill_tests")
}

model SkillTestAttempt {
  attemptId           String       @id @default(uuid()) @map("id")
  testId              String
  userId              String
  userSkillId         String
  answers             Json         // User's answers
  score               Int          // 0-100
  passed              Boolean
  timeSpent           Int          // seconds
  certificateUrl      String?      // PDF certificate if passed
  createdAt           DateTime     @default(now())

  test                SkillTest    @relation(fields: [testId], references: [testId], onDelete: Cascade)

  @@index([testId])
  @@index([userId])
  @@index([userSkillId])
  @@map("skill_test_attempts")
}

enum DisputeCategory {
  NO_SHOW
  POOR_QUALITY
  BEHAVIOR
  SCAM
  SAFETY
  PAYMENT
  OTHER
}

enum DisputeStatus {
  OPEN
  UNDER_REVIEW
  AI_RESOLVED
  HUMAN_MEDIATION
  RESOLVED
  CLOSED
  APPEALED
}

// Dispute Resolution System
model Dispute {
  disputeId           String           @id @default(uuid()) @map("id")
  swapId              String
  reporterId          String
  reportedUserId      String
  category            DisputeCategory
  description         String
  evidence            Json?            // Screenshots, messages, recordings
  status              DisputeStatus    @default(OPEN)

  // AI Analysis
  aiRecommendation    Json?            // AI decision and reasoning
  aiConfidence        Float?           // 0-100

  // Human Resolution
  resolution          String?
  resolvedBy          String?          // ModeratorID
  resolvedAt          DateTime?

  // Remediation
  coinsRefunded       Int              @default(0)
  isReporterBanned    Boolean          @default(false)
  isReportedBanned    Boolean          @default(false)

  // Appeals
  appealedAt          DateTime?
  appealReason        String?
  appealResolvedBy    String?
  appealResolvedAt    DateTime?

  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  @@index([swapId])
  @@index([reporterId])
  @@index([reportedUserId])
  @@index([status])
  @@index([category])
  @@map("disputes")
}

